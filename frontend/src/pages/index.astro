---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header title={SITE_TITLE} />
		<main>
			<section class="flex flex-col md:flex-row items-center justify-center gap-8">
				<img src="/dsmun_logo.jpg" alt="Logo" height="340px" width="340px" class="sm:h-[280px] sm:w-[280px] lg:h-[340px] lg:w-[340px]">

				<div>
					<h1 class="font-semibold">Welcome to <span class="bg-gradient-to-r from-yellow-600 via-amber-400 to-yellow-600 bg-clip-text text-transparent">DS MUN</span></h1>
					<p>{SITE_DESCRIPTION}</p>
				</div>

			</section>
			
		</main>
		<Footer />
	</body>
</html>
